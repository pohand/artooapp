@model MistakeCategoryListViewModel
<!-- Breadcrumb -->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">Home</a>
    </li>
    <li class="breadcrumb-item active">Danh sách loại lỗi</li>
</ol>


<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-align-justify"></i>
                        <strong>Danh mục loại lỗi (bằng tay và mắt)</strong>
                        @if (!string.IsNullOrEmpty(ViewBag.message))
                        {
                            <span class="badge badge-success float-right">@ViewBag.message</span>
                        }
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Date registered</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ManualMistakeCategories)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Description</td>
                                        <td>@item.DateRegister.ToString("d")</td>
                                        <td>
                                            <a asp-controller="MistakeCategory" asp-action="Details" class="btn btn-sm btn-success" asp-route-id="@item.MistakeCategoryID">Detail</a>
                                            @*<a asp-action="Delete" asp-route-id="@item.MistakeCategoryID" class="btn btn-sm btn-danger">Delete</a>*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="MistakeCategory" asp-action="Create" class="btn btn-sm btn-primary float-right"><i class="fa fa-dot-circle-o"></i> Add</a>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-align-justify"></i>
                        <strong>Danh mục loại lỗi (bằng thiết bị)</strong>
                        @if (!string.IsNullOrEmpty(ViewBag.message))
                        {
                            <span class="badge badge-success float-right">@ViewBag.message</span>
                        }
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Date registered</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.DeviceMistakeCategories)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Description</td>
                                        <td>@item.DateRegister.ToString("d")</td>
                                        <td>
                                            <a asp-controller="MistakeCategory" asp-action="Details" class="btn btn-sm btn-success" asp-route-id="@item.MistakeCategoryID">Detail</a>
                                            @*<a asp-action="Delete" asp-route-id="@item.MistakeCategoryID" class="btn btn-sm btn-danger">Delete</a>*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="MistakeCategory" asp-action="Create" asp-route-type="1" class="btn btn-sm btn-primary float-right"><i class="fa fa-dot-circle-o"></i> Add</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.conainer-fluid -->
    </div>
</div>