                                            <a asp-controller="Inspection" asp-action="Index" class="page-link" asp-route-id="@i">@i</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="page-item">
                                            <a asp-controller="Inspection" asp-action="Index" class="page-link" asp-route-id="@i">@i</a>
                                        </li>
                                    }
                                }
                            </ul>*@
                    </div>
                </div>
            </div>
        </div>
        <!-- /.conainer-fluid -->
    </div>
</div>
